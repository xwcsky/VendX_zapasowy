generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Colognes {
  id           String   @id @default(uuid())
  cologne_name String
  brand_name   String  @default("unknown") // <- domyślna wartość
  orders       Orders[]
  @@map("colognes")
}

model Orders {
  id            String   @id @default(uuid())
  scent_id      String
  device_id     String
  creation_date DateTime @default(now())
  cologne       Colognes  @relation(fields: [scent_id], references: [id])
  @@map("orders")
}

model Users {
  id            Int    @id @default(autoincrement())
  user_name     String @unique
  password      String
  @@map("user")
}
